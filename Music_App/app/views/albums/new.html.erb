<h1>Add an album</h1>


<% if flash.now[:errors] %>
<ul>
  <% flash.now[:errors].each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>


<form action="<%= albums_url %>" method="post">
  <%= auth_token %>

  <label>Title:
    <input type="text" name="album[title]">
  </label>

  <br><br>

  <label>Year:
    <input type="number" name="album[year]">
  </label>

  <br><br>

  <label>Choose Band
    <select name="album[band_id]">
      <option disabled value="">--Please choose a band--</option>
      <% Band.all.each do |band| %>
        <option value="<%= band.id %>" <%= params[:band_id] == band.id ? "selected" : "" %> ><%= band.name %></option>
      <% end %>
    </select>
  </label>

  <br><br>

  <input type="radio" name="album[live]" value="true">Live <br>
  <input type="radio" name="album[live]" value="false">Studio <br>

  <br><br>

  <input type="submit" value="Finish">

</form>
